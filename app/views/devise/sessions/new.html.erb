
<div class="col-sm-4">
</div>

<div class="text-center col-sm-4">
<main class="form-signin">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <img class="mb-4" src="/docs/5.0/assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <div class="form-floating mb-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"floatingInput",placeholder:'user@example.com' %>

      <%= f.label :Username , for:"floatingInput" %>
    </div>
    <div class="form-floating mb-3">
      <%= f.password_field :password, autocomplete: "current-password", class:"form-control", id:"floatingPassword", placeholder:'password' %>

      <%= f.label :password, for:"floatingPassword"%> 
    </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-group form-check form-switch mb-3">
      <%= f.check_box :remember_me, class:"form-check-input"%>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <br />
    <div class="actions mb-3">
      <%= f.submit "Sign in", class:'w-100 btn btn-lg btn-primary' %>
    </div>
    <p class="mt-5 mb-3 text-muted">&copy; 2017â€“2021</p>
<% end %>
</main>
</div>
<div class="col-sm-4">
</div>
